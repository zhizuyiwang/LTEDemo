<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_0176da"
        android:theme="@style/Theme.ToolBar.Button"
        toolbar:popupTheme="@style/Theme.ToolBar.Base"
        >
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_4bae4f">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/color_title_background"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv1_click"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                style="@style/color_title"
                android:text="IMSI/MAC"
                android:textSize="15sp" />

        </LinearLayout>
        <com.zed.hotsport.view.SyncHorizontalScrollView
            android:id="@+id/myScrollView"
            android:layout_width="wrap_content"
            android:fadeScrollbars="false"
            android:scrollbars="none"
            style="@style/color_title_background"
            android:layout_height="35dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv2_click"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    style="@style/color_title"
                    android:text="IMEI/ESN"/>
                <TextView
                    android:id="@+id/tv3_click"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/color_title"
                    android:textSize="15sp"
                    android:text="运营商"/>
                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/color_title"
                    android:textSize="15sp"
                    android:text="时间"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    style="@style/color_title"
                    android:text="黑白名单名称"/>
                <TextView
                    android:id="@+id/tv_TMS"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/color_title"
                    android:textSize="15sp"
                    android:text="TMS"/>
                <TextView
                    android:id="@+id/tv_lac"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/color_title"
                    android:textSize="15sp"
                    android:text="LAC"/>
                <TextView
                    android:id="@+id/tv_power"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    style="@style/color_title"
                    android:text="场强值"/>
                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    style="@style/color_title"
                    android:text="归属地"/>
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    style="@style/color_title"
                    android:text="手机类型"/>
            </LinearLayout>
        </com.zed.hotsport.view.SyncHorizontalScrollView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/container1"
                android:layout_width="150dp"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/listView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:cacheColorHint="@color/color_white"
                    android:listSelector="@color/color_white">
                </ListView>
            </LinearLayout>
            <com.zed.hotsport.view.SyncHorizontalScrollView
                android:id="@+id/container_scrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:id="@+id/container2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ListView
                        android:id="@+id/listView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none"
                        android:cacheColorHint="@color/color_white"
                        android:listSelector="@color/color_white">
                    </ListView>
                </LinearLayout>
            </com.zed.hotsport.view.SyncHorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <!--<ListView
        android:id="@+id/list_View"
        android:dividerHeight="5dp"
        android:divider="@color/color_0176da"
        android:cacheColorHint="@color/color_white"
        android:listSelector="@color/color_white"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>-->


</LinearLayout>
